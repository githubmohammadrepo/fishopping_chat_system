                    <div class="box box-primary">
                        <div class="box-body">
                            {{!-- start form add new group --}}
                            <div class="col-sm-12 m-auto">
                                <div class="card">
                                    <div class="card-body">
                                        
                                        <form action="/admin/groupAccess" method="post" accept-charset="utf-8">
                                            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

                                            <div class="mb-3 row">
                                                <label class="col-sm-12 form-label" for="name">Group Access
                                                    Title</label>
                                                <div class="col-sm-12">
                                                    <input type="text" name="name" value="{{oldPassedData.name}}"
                                                        placeholder="Group Access Name" class="form-control">
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label class="col-sm-12 form-label" for="description">Group Access
                                                    Description</label>
                                                <div class="col-sm-12">
                                                    <textarea type="text" rows="4" name="description"
                                                        placeholder="Group Access Description"
                                                        class="form-control">{{oldPassedData.description}}</textarea>

                                                </div>
                                            </div>

                                            <div class="mb-3 row">
                                                                                   

                                               
                                                <label class="col-sm-12 form-label" for="description">Observer
                                                    Groups</label>

                                                <div class="col-sm-12 ">
                                              
                                                    <select name="observer_group" class="form-select">

                                                        {{#each groups}}
                                                            
                                                            <option {{select}} value="{{./id}}"  title="{{./description}}">{{./name}}</option>                                                           

                                                        {{/each}}
                                                    </select>
                                                    <small class="form-text">Select for than one</small>
                                                </div>
                                            </div>

                                            <div class="mb-3 row">
                                                <label class="col-sm-12 form-label" for="description">Watching
                                                    Groups</label>

                                                <div class="col-sm-12 ">
                                                    <select name="watching_group" multiple="" class="form-select">
                                                        {{#each groups}}

                                                        <option value="{{id}}" title="{{description}}">{{name}}</option>
                                                        {{/each}}
                                                    </select>
                                                    <small class="form-text">Select for than one</small>
                                                </div>
                                            </div>


                                            <div class="mb-3 row justify-content-center">
                                                <div class="col-sm-10 m-auto text-center">
                                                    <ul class=" list-group mb-3">
                                                        <li class="list-group-item text-danger">{{errorValidation}}</li>
                                                    </ul>
                                                    <input type="submit" value="Save Group Access"
                                                        class="btn btn-primary">
                                                </div>
                                            </div>
                                        </form>
